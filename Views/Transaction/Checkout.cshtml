<div class="container-fluid">
    <div class="row">
        <div id="invoice-pdf" class="col-lg-6 overflow-auto" style="height: calc(100vh - 120px);">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-xs-center"><strong>Invoice</strong></h3>
                    <h5 class="text-xs-center">Invoice ID: {{order._id}}</h5>
                    <h6 class="text-xs-center">Creation date: {{convertDateTime order.createdAt}}</h6>
                    <hr />
                    <div class="row flex-column px-3">
                        <h6 class="text-xs-center">Customer Name: {{order.customer.name}}</h6>
                        <h6 class="text-xs-center">Customer Phone: {{order.customer.phoneNumber}}</h6>
                        <h6 class="text-xs-center">Customer Address: {{order.customer.address}}</h6>
                    </div>
                </div>
                <div class="card-block">
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <td><strong>Item Name</strong></td>
                                    <td class="text-xs-center"><strong>Item Price</strong></td>
                                    <td class="text-xs-center"><strong>Item Quantity</strong></td>
                                    <td class="text-xs-right"><strong>Total</strong></td>
                                </tr>
                            </thead>
                            <tbody>
                                @*
                                <tr>
                                <td class="text-xs-center">{{this.product.productName}}</td>
                                <td class="text-xs-center">{{convertVND this.product.price}}</td>
                                <td class="text-xs-center">x{{this.quantity}} </td>
                                <td class="text-xs-center"> {{convertVND this.subtotal}} </td>
                                </tr>
                                *@
                            </tbody>
                            <tfoot>
                                @* <tr>
                                <td></td>
                                <td></td>
                                <td class="text-xs-center"><strong>VAT</strong></td>
                                <td class="text-xs-right">0%</td>
                                </tr> *@
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td class="text-xs-center"><strong>Total</strong></td>
                                    <td class="text-xs-right" id="table-total">{{convertVND order.total}}</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex flex-column col-lg-6">
            @* <div class="mb-3">
            <label for="vat" class="form-label">VAT:</label>
            <input type="number" class="form-control" id="vat" />
            </div>
            <div class="mb-3">
            <label for="promotion" class="form-label">Promotion:</label>
            <input type="text" class="form-control" id="promotion" />
            </div>
            <div class="mb-3">
            <label for="note" class="form-label">Note:</label>
            <textarea class="form-control" id="note" rows="3"></textarea>
            </div> *@
            <div class="mb-3">
                <label for="cash" class="form-label">Cash:</label>
                <input type="number" class="form-control" id="cash" />
            </div>
            <div class="row justify-content-between px-4">
                <div class="btn btn-success col-3" data-value="10" onclick="handleCalcCash(this)">10.000</div>
                <div class="btn btn-success col-3" data-value="100" onclick="handleCalcCash(this)">100.000</div>
                <div class="btn btn-success col-3" data-value="1000" onclick="handleCalcCash(this)">1.000.000</div>
            </div>
            <div class="alert alert-danger" role="alert" style="display: none;">
                Not enough money!
            </div>
            <p class="py-3 px-1" id="return-money">Return: 0Ä‘</p>
            <input type="text" hidden value="{{order.total}}" id="total" />
            <button id="btn-complete" disabled data-orderid="{{order._id}}" type="button" class="btn btn-primary" onclick="handleComplete(this)">Complete</button>
        </div>
    </div>
</div>

