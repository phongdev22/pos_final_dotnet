@{
	ViewData["Title"] = "POS | Create new account";
}
<div class="container-fluid add-form-list">
	<div class="row">
		<div class="col-sm-12">
			<div class="card">
				<div class="card-header d-flex justify-content-between">
					<div class="header-title">
						<h4 class="card-title">Create New Account</h4>
					</div>
				</div>
				<div class="card-body">
					<form method="post" asp-action="Create" data-toggle="validator">
						<div class="row">
							<div class="col-md-6">
								<div class="form-group">
									<label>Name</label>
									<input name="UserName" type="text" class="form-control" placeholder="Enter Name" />
									<div class="help-block with-errors"></div>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label>Phone Number </label>
									<input name="PhoneNumber" type="text" class="form-control" placeholder="Enter Phone No" />
									<div class="help-block with-errors"></div>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label>Email *</label>
									<input name="Email" type="text" class="form-control" placeholder="Enter Email" required />
									<div class="help-block with-errors"></div>
								</div>
							</div>
							<div class="col-md-6 d-flex justify-content-start">
								<div class="form-group col-lg-5 mr-3">
									<label>Roles *</label>
									<div>
										@foreach (var role in ViewBag.Roles)
										{
											<div class="custom-control custom-checkbox custom-checkbox-color-check custom-control-inline">
												<input name="Roles" value="@role.NormalizedName" type="checkbox" class="custom-control-input bg-success" id="@role.NormalizedName">
												<label class="custom-control-label" for="@role.NormalizedName">@role.NormalizedName</label>
											</div>
										}
									</div>
								</div>

								<div class="form-group">
									<label>Gender</label>
									<div class="d-flex align-items-center mt-2">
										<label class="mx-2">
											<input type="radio" name="Gender" value="true"/> <span class="ml-2">Male</span>
										</label>
										<label class="mx-2">
											<input type="radio" name="Gender" value="false" /> <span class="ml-2">Female</span>
										</label>
									</div>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label>New Password</label>
									<input name="password" disabled type="text" class="form-control" placeholder="Enter Password" onkeydown="(() => {document.querySelector('#message-error').textContent=''})()" />
									<div class="help-block with-errors"></div>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label>Confirm Password</label>
									<input name="confirmPassword" disabled type="text" class="form-control" placeholder="Enter Confirm Password" oninput="checkPassword(this)" />
									<div class="help-block with-errors"></div>
								</div>
							</div>
							<div class="col-md-12">
								<div class="form-group">
									@if (ViewBag.Messsage != null)
									{
										<div id="message-error" class="help-block with-errors">@ViewBag.Messsage</div>
									}
								</div>
							</div>
						</div>
						<button type="submit" class="btn btn-primary mr-2">Add Account</button>
						<button type="reset" class="btn btn-danger">Reset</button>
					</form>
				</div>
			</div>
		</div>
	</div>
	<!-- Page end  -->
</div>