@model pos.Entities.ApplicationUser;
@{
	ViewData["Title"] = "POS | Create new account";
}
<div class="container-fluid add-form-list">
	<div class="row">
		<div class="col-sm-12">
			<div class="card">
				<div class="card-header d-flex justify-content-between">
					<div class="header-title">
						<h4 class="card-title">Create New Account</h4>
					</div>
				</div>
				<div class="card-body">
					<form method="post" asp-action="Create" data-toggle="validator">
						<div class="row">
							<div class="col-md-6">
								<div class="form-group">
									<label>Name</label>
									<input asp-for="FullName" type="text" class="form-control" placeholder="Enter Name" required />
									<div class="help-block with-errors"></div>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label>Phone Number </label>
									<input asp-for="PhoneNumber" type="text" class="form-control" placeholder="Enter Phone No" />
									<div class="help-block with-errors"></div>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label>Email *</label>
									<input asp-for="Email" type="text" class="form-control" placeholder="Enter Email" required />
									<div class="help-block with-errors"></div>
								</div>
							</div>
							<div class="col-md-6 d-flex justify-content-start">
								<div class="form-group col-lg-5 mr-3">
									<label>Roles *</label>
									<div>
										@foreach (var role in ViewBag.Roles)
										{
											<div class="custom-control custom-checkbox custom-checkbox-color-check custom-control-inline">
												<input name="Roles" value="@role.NormalizedName" type="checkbox" class="custom-control-input bg-success" id="@role.NormalizedName">
												<label class="custom-control-label" for="@role.NormalizedName">@role.NormalizedName</label>
											</div>
										}
									</div>
								</div>

								<div class="form-group">
									<label>Gender</label>
									<div class="d-flex align-items-center mt-2">
										<div class="custom-control custom-checkbox custom-checkbox-color-check custom-control-inline">
											<input asp-for="Gender" type="radio" value="true" checked id="Male" class="custom-control-input">
											<label class="custom-control-label" for="Male">Male</label>
										</div>
										<div class="custom-control custom-checkbox custom-checkbox-color-check custom-control-inline">
											<input asp-for="Gender" type="radio" value="false" id="Female" class="custom-control-input">
											<label class="custom-control-label" for="Female">Female</label>
										</div>
									</div>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label>Store *</label>
									<select name="retailId"
											class="selectpicker form-control"
											data-style="py-0" required>
										<option value="">Select an inventory</option>
										@foreach (var retail in ViewBag.Stores)
										{
											<option class="text-uppercase" value="@retail.Id">@retail.StoreName</option>
										}
									</select>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label>Password</label>
									<input name="password" disabled type="text" class="form-control" placeholder="Enter Password">
									<div class="help-block with-errors"></div>
								</div>
							</div>
						</div>
						<button type="submit" class="btn btn-primary mr-2">Add Account</button>
						<button type="reset" class="btn btn-danger">Reset</button>
					</form>
				</div>
			</div>
		</div>
	</div>
	<!-- Page end  -->
</div>