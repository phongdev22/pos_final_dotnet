@model pos.Entities.Customer

@{
	ViewData["Title"] = "POS | Create Customer";
}
<div class="container-fluid add-form-list">
	<div class="row">
		<div class="col-lg-12">
			<div class="d-flex flex-wrap align-items-center justify-content-between mb-4">
				<a asp-action="Index">Back to List</a>
			</div>
		</div>
		<div class="col-sm-12">
			<div class="card">
				<div class="card-header d-flex justify-content-between">
					<div class="header-title">
						<h4 class="card-title">Add Customer</h4>
					</div>
				</div>
				<div class="card-body">
					<form asp-action="Create" data-toggle="validator" asp-action="Create">
						<div class="row">
							<div class="col-md-6">
								<div class="form-group">
									<label asp-for="Name">Name *</label>
									<input asp-for="Name" type="text" class="form-control" placeholder="Enter Name" required />
									<div class="help-block with-errors"></div>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label asp-for="PhoneNumber">Phone Number *</label>
									<input asp-for="PhoneNumber"
										   type="text"
										   class="form-control"
										   pattern="[0-9]{10}"
										   placeholder="Enter Phone Number"
										   required />
									<div class="help-block with-errors"></div>
								</div>
							</div>
							<div class="col-md-12">
								<div class="form-group">
									<label asp-for="Address">Address</label>
									<input asp-for="Address" type="text" class="form-control" rows="4" />
								</div>
							</div>
						</div>
						<button type="submit" class="btn btn-primary mr-2">Create</button>
						<button type="reset" class="btn btn-danger">Reset</button>
					</form>
				</div>
			</div>
		</div>
	</div>
	<!-- Page end  -->
</div>