<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <div class="header-title">
                        <h4 class="card-title">User List</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <div class="row justify-content-between">
                            <div class="col-sm-6 col-md-6">
                                <div id="user_list_datatable_info" class="dataTables_filter">
                                    <form class="mr-3 position-relative">
                                        <div class="form-group mb-0">
                                            <input type="search" class="form-control" id="exampleInputSearch" placeholder="Search" aria-controls="user-list-table" />
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-6">
                                <div class="user-list-files d-flex">
                                    <a class="bg-primary" href="/accounts/create">
                                        Create Account
                                    </a>
                                </div>
                            </div>
                        </div>

                        <style>
                            .btnStatus {
                                cursor: pointer;
                            }
                        </style>

                        <table id="user-list-table" class="table table-striped dataTable mt-4" role="grid" aria-describedby="user-list-page-info">
                            <thead>
                                <tr class="ligth">
                                    <th>Profile</th>
                                    <th>Name</th>
                                    <th>Contact</th>
                                    <th>Email</th>
                                    <th>Status</th>
                                    {{! <th>Join Date</th> }}
                                    <th style="min-width: 100px">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr id="data-{{this._id}}">
                                    <td class="text-center"><img class="rounded img-fluid avatar-40" src="/images/user/01.jpg" alt="profile" /></td>
                                    <td>{{this.fullName}}</td>
                                    <td>{{this.phoneNumber}}</td>
                                    <td>{{this.email}}</td>
                                    @* <td onclick="handleUpdateStatus(event)" data-username="{{username}}">
                                    <span class="btnStatus badge bg-danger">Locked</span>
                                    </td> *@
                                    <td onclick="handleUpdateStatus(event)" data-username="{{username}}">
                                        <span class="btnStatus badge bg-success">Active</span>
                                    </td>
                                    <td>
                                        <div class="flex align-items-center list-user-action">
                                            <a id="btnVerify" class="btn btn-sm bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Verify"
                                                href="/auth/resend/{{username}}"><i class="ri-mail-line mr-0"></i></a>
                                            <a class="btn btn-sm bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit" href="/accounts/edit?u={{this.username}}"><i
                                                    class="ri-pencil-line mr-0"></i></a>
                                            <button onclick="handleDelete(this)" class="btn btn-sm bg-primary" data-name="{{this.fullName}}" data-id="{{this._id}}"><i
                                                    class="ri-delete-bin-line mr-0"></i></button>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="row justify-content-between mt-3">
                        <div id="user-list-page-info" class="col-md-6">
                            <span>Showing 1 to 5 of 5 entries</span>
                        </div>
                        <div class="col-md-6">
                            <nav aria-label="Page navigation example">
                                <ul class="pagination justify-content-end mb-0">
                                    <li class="">
                                        <a class="page-link" href="?page={{previous}}">Previous</a>
                                        <a class="page-link disabled" href="#">Previous</a>
                                    </li>
                                    <li class="">
                                        <a class="page-link" href="?page={{this}}">{{this}}</a>
                                    </li>
                                    <li class="">
                                        <a class="page-link" href="?page={{next}}">Next</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/changeStatus.js"></script>